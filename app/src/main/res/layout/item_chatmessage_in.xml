<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imPhoto"
        android:layout_toEndOf="@+id/imPhoto"
        android:text="John Green"/>

    <ImageView
        android:id="@+id/imPhoto"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@+id/tvUsername"
        android:src="@drawable/profile_icon_grey"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tvUsername"
        android:layout_toRightOf="@+id/imPhoto"
        android:layout_toEndOf="@+id/imPhoto"
        android:layout_toLeftOf="@+id/ll_ic_phone_ic_cross"
        android:layout_toStartOf="@+id/ll_ic_phone_ic_cross"
        android:background="#D2D3D5"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Hey! Can we meet today? I have some great story to share!"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Oct 4 4:30 PM"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ic_phone_ic_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tvUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dark_phone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dark_cross"/>

    </LinearLayout>



</RelativeLayout>